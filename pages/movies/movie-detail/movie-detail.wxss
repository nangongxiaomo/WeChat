@import "../stars-template/stars-template.wxss";

.relative {
    position: relative;
    height: 320rpx;
    margin-bottom: 55rpx;
}

.head-img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 320rpx;
    -webkit-filter: blur(20rpx);
}

.movie-head {
    position: absolute;
    top: 95rpx;
    left: 50rpx;
}
.movie-head text{
    display: block;
}
.movie-name text {
    color: #fff;
    font-size: 36rpx;
    margin-bottom: 50rpx;
}

.area-year text {
    color: #fff;
    font-size: 26rpx;
}

.like {
    display: flex;
    flex-direction: row;
    font-size: 22rpx;
    color: #666;
    margin-top: 30rpx;
}

.like text:nth-child(2) {
    padding-right: 20rpx;
}

.like .color {
    color: #f21146;
    padding-right: 5rpx;
}

.movie-img {
    position: absolute;
    height: 238rpx;
    width: 175rpx;
    right: 50rpx;
    top: 190rpx;
}

.movie-title {
    width:455rpx;
    color: #333;
    font-size: 32rpx;
    padding-bottom: 20rpx;
}

.common {
    font-size: 24rpx;
    color: #999;
    margin-right: 30rpx;
}

.padding {
    padding: 0 55rpx;
}

.font-common {
    color: #666;
    font-size: 24rpx;
}

.summary-container {
    padding-top: 15rpx;
    padding-bottom: 50rpx;
    border-bottom: 1px solid #d9d9d9;
}

.brief, .actor {
    display: block;
    padding: 20rpx 0;
    color: #999;
    font-size: 24rpx;
}

.content {
    color: #666;
    font-size: 24rpx;
    letter-spacing: 3rpx;
}

.content-container {
    padding: 50rpx 0;
    border-bottom: 1px solid #d9d9d9;
}

scroll-view {
    width: 100%;
}

.flex {
    display: inline-flex;
    flex-direction: column;
    flex-wrap: nowrap;
    margin-right: 35rpx;
}

.actor {
    padding: 50rpx 0;
}

.actor-img {
    width: 170rpx;
    height: 210rpx;
}

.actor-name {
    width: 170rpx;
    font-size: 28rpx;
    color: #666;
    text-align: center;
    white-space: pre-wrap;
}

.actor-container {
    padding-bottom: 50rpx;
}

.scroll-view {
    white-space: nowrap;
}

.template-flex view {
    display: flex;
    flex-direction: row;
    margin-bottom: 15rpx;
}

.template-flex>view:nth-child(2) {
    margin-bottom: 0;
}
