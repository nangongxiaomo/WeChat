/* pages/posts/post-detail/post-detail.wxss */
.banner-container{
    position:relative;
}
.banner{
    width: 100%;
}
.music-btn{
    position:absolute;
    width:120rpx;
    height:120rpx;
    z-index: 1;
    top:50%;
    left: 50%;
    transform: translate(-50%,-50%);
}

.info-container{
    display: flex;
    flex-direction: column;
}
.author-time{
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 20rpx;
}
.author-time image{
    width:60rpx;
    height:60rpx;
}
.author-time text{
    font-size:18rpx;
    color:#999;
}
.author-time .author{
    display:inline-block;
    margin-left:20rpx;
    font-size: 20rpx;
}
.author-time .publish{
    display: inline-block;
    margin: 0 10rpx;
}

.title{
    font-size: 30rpx;
    color:#333;
    margin-left: 20rpx;
    margin-top:10rpx;
}

.collect-share{
    position:relative;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-end;
    margin: 20rpx;
}
.collect-share::after{
    content: '';
    width:100%;
    height: 1px;
    position:absolute;
    background-color:#EFF1F3; 
    z-index: -1;
    transform: scaleY(0.5);
}
.collect-share image{
    width: 80rpx;
    height: 80rpx;
}
.collect-share image:first-child{
    margin-right:25rpx;
}
.info-content{
   color: #666;
   font-size: 24rpx; 
   padding: 20rpx;
   line-height: 50rpx;
   letter-spacing: 5rpx;
}